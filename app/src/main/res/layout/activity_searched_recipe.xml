<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".SearchedRecipeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/searched_recipe_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/loadingg"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:alpha="0.4"
                android:src="@drawable/gradient"/>
            <TextView
                android:id="@+id/searched_recipe_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:paddingLeft="10sp"
                android:gravity="start"
                android:paddingTop="10sp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/searched_recipe_btn"
                />
            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/searched_recipe_btn"
                android:layout_margin="10dp"
                android:src="@drawable/ic_save_border"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searched_recipe_category"
                android:text="Category"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_below="@id/searched_recipe_title"
                android:paddingLeft="10sp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/searched_recipe_ytLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Youtube Link:"
            android:textSize="25sp"
            android:padding="5dp"
            android:autoLink="web"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingredients:"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount:"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/searched_recipe_ing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingredients:"
                android:gravity="center"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/searched_recipe_amt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount:"
                android:gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/searched_recipe_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/random_description"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/random_src_link"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        <TextView
            android:id="@+id/searched_recipe_srcLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/random_src_link"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:autoLink="web"
            />

    </LinearLayout>


</ScrollView>